<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.theapptest.nuvo.agent.AgentsAddArtistActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/aaaa_toolbar_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/black"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/aaaa_back"
            android:background="@mipmap/ic_action_back_icon3x"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_title"
            android:textSize="19dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/aaaa_toolbar_title" />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/black">

        <TextView
            android:text="@string/add_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/signintonuvo"
            android:textColor="@color/white"
            android:id="@+id/aaaa_tv_add_artist"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/agent_add_artist_toplv"
        android:background="@drawable/login_bg">



        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="fill_parent"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:alpha="0.8"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/inner_view"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="text"
                android:hint="@string/add_artist_one"
                android:padding="10dp"
                android:maxLength="50"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/ed_email"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:background="@drawable/textbox"
                android:ems="10"
                android:id="@+id/agent_add_artist_add_artist_one" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="text"
                android:hint="@string/add_artist_two"
                android:maxLength="50"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/ed_email"
                android:textCursorDrawable="@null"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:background="@drawable/textbox"
                android:ems="10"
                android:id="@+id/agent_add_artist_add_artist_two" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="text"
                android:hint="@string/add_artist_three"
                android:textColorHint="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textCursorDrawable="@null"
                android:maxLength="50"
                android:textColor="@color/white"
                android:textSize="@dimen/ed_email"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:background="@drawable/textbox"

                android:id="@+id/agent_add_artist_add_artist_three" />

            <!-- android:drawableRight="@drawable/password" -->

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_color_dark"
                android:id="@+id/agent_add_artist_next"
                android:text="@string/next"
                android:textColor="#fff"
                android:textSize="@dimen/loginbttextsize"
                android:layout_marginBottom="@dimen/buttonthirtyspace"
                android:layout_marginTop="@dimen/buttonthirtyspace"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</LinearLayout>
