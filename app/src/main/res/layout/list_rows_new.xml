            </LinearLayout>   <!--horizontal-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <TextView
                android:id="@+id/url"
                android:layout_width="wrap_content"
